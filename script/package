#!/bin/bash -e

BUILD_DIR=build
SYM_DIR=sym/Release

pushd $BUILD_DIR

echo "==> ğŸšš Moving dSYM to xcarchive"
mkdir -p mas.xcarchive/dSYMs/
mv $SYM_DIR/mas.dSYM mas.xcarchive/dSYMs/

echo "==> ğŸ—œï¸ Compressing mas.xcarchive"
zip -r mas.xcarchive.zip mas.xcarchive

echo "==> ï¸ğŸ—œï¸ Compressing binary"
zip -j mas-cli.zip mas.xcarchive/Products/usr/local/bin/mas

echo -n "==> ğŸ”¢ SHA256: "
shasum -a 256 mas-cli.zip

popd
