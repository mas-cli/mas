# https://editorconfig.org
root = true

[*]
charset = utf-8
continuation_indent_size = 0
end_of_line = lf
indent_size = 2
indent_style = tab
insert_final_newline = true
max_line_length = 120
tab_width = 2
trim_trailing_whitespace = true

[*.md]
# Trailing spaces have meaning in Markdown
trim_trailing_whitespace = false

[*.yml]
max_line_length = 80

[script/*]
max_line_length = 80
